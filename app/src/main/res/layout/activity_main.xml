<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adilos.hikerswatch.MainActivity"
    android:background="@drawable/hikersbg">

    <TextView
        android:text="Hiker's Watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Latitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latTextView"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="Longitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lonTextView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/latTextView"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="Accuracy:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accuracyTextView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lonTextView"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="Altitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/altTextView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/accuracyTextView"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="Speed:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedTextView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/altTextView"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
    <TextView
        android:text="Address: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressTextView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/speedTextView"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:id="@+id/textClock"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="72sp"
        android:textColor="@android:color/white" />
</RelativeLayout>
